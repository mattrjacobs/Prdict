<?xml version="1.0" encoding="utf-8"?>
<entry xmlns="http://www.w3.org/2005/Atom">
  <title>{{ user.email|escape }}</title>
  <updated>{{ user.isoformat_updated }}</updated>
  <published>{{ user.isoformat_created }}</published>
  <id>{{ base_url }}{{ user.relative_url }}</id>
  <username>{{ user.username|escape }}</username>
  <link rel="alternate" href="{{ base_url }}{{ user.relative_url }}" title="{{ user.email|escape }}" type="text/html"/>
  <link rel="alternate JSON" href="{{ base_url }}{{ user.relative_url }}?alt=json" title="{{ user.email|escape }} JSON" type="text/html"/>
  <link rel="friends HTML" href="{{ base_url }}{{ user.relative_url }}/friends" title="{{ user.email|escape }} friends" type="text/html"/>
  <link rel="friends ATOM" href="{{ base_url }}{{ user.relative_url }}/friends?alt=xml" title="{{ user.email|escape }} friends" type="application/atom+xml"/>
  <link rel="friends JSON" href="{{ base_url }}{{ user.relative_url }}/friends?alt=json" title="{{ user.email|escape }} friends" type="application/json"/>
  <content type="text">{{ user.username|escape }}</content>
</entry>
